{
    "plugins": [
        "@stylistic/js"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [
                ".eslintrc.{js,cjs}"
            ],
            "parserOptions": {
                "sourceType": "script"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@stylistic/js/comma-dangle": [
            "error",
            "only-multiline"
        ],
        "@stylistic/js/brace-style": [
            "error",
            "stroustrup"
        ],
        "@stylistic/js/indent": [
            "error",
            "tab"
        ],
        "@stylistic/js/linebreak-style": [
            "error",
            "unix"
        ],
        "@stylistic/js/quotes": [
            "error",
            "single"
        ],
        "@stylistic/js/semi": [
            "error",
            "never"
        ]
    },
    "globals": {
        "Projectile": "readonly",
        "Planets": "readonly",
        "Draw": "readonly",
        "index": "readonly",
        "Distance": "readonly",
        "Spaceship": "readonly",
        "StarBackground": "readonly",
        "Npc": "readonly",
        "OutsideLevel": "readonly",
        "LevelHandler": "readonly",
        "Particle": "readonly",
        "Player": "readonly",
        "SlingshotExtension": "readonly",
        "LoadExtensions": "readonly",
        "FetchContainerExtension": "readonly",
        "EnterVehicleExtension": "readonly",
        "Water": "readonly",
        "Splash": "readonly",
        "PrettyParticles": "readonly",
        "Bullet": "readonly",
        "Gun": "readonly",
        "GameObject": "readonly",
        "Schedule": "readonly",
        "Keyboard": "readonly",
        "List": "readonly",
        "Palette": "readonly",
        "Calculate": "readonly",
        "Camera": "readonly",
        "Loop": "readonly",
        "ScriptedEvent": "readonly",
        "Position": "readonly",
        "Random": "readonly",
        "Controller": "readonly",
        "Physics": "readonly",
        "Collision": "readonly",
        "Mouse": "readonly",
        "Animation": "readonly",
        "ClickEvents": "readonly",
        "Push": "readonly",
        "InventoryItem": "readonly",
        "Inventory": "readonly"
    }
}